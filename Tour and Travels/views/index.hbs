    <script>
        // Function to toggle the Read More section
        function toggleReadMore() {
            const readMoreSection = document.getElementById('readMoreSection');
            readMoreSection.style.display = readMoreSection.style.display === 'block' ? 'none' : 'block';
        }

        // Function to toggle the Search Bar visibility on mobile
        function toggleSearchBar() {
            const searchBar = document.querySelector('.search-bar');
            searchBar.style.display = searchBar.style.display === 'block' ? 'none' : 'block';
        }

        // Example JavaScript for handling the search input
        const searchInput = document.getElementById('searchInput');
        searchInput.addEventListener('input', function() {
            console.log('Searching for:', searchInput.value);
        });

        const searchResults = document.getElementById("search-results");
      

        // Sample search data (could be URLs or page names)
        const data = [

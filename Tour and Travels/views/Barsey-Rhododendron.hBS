            <!-- Slideshow -->
            <div class="slideshow-container">
                <!-- Slides -->
                <div class="slide active-slide">
                    <img src="https://www.setmytrip.in/wp-content/uploads/2023/11/Barsey-Camping.jpg" alt="Pelling Bird Park - View 1" style="width: 100%; height: 100%; object-fit: cover;">
